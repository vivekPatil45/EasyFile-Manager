{
    "manifest_version": 3,
    "name": "EasyFile Manager",
    "version": "1.0",
    "description": "Classifies downloaded files as audio, video, documents, or images and stores them in respective folders.",
    "permissions": [
        "downloads"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon16.png",
            "128": "icons/icon16.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon16.png",
        "128": "icons/icon16.png"
    }
}
